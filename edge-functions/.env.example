# Cloudflare Configuration Template
# Copy this file to .env.production and fill in your actual values

# Your Cloudflare Account ID (found in dashboard)
CLOUDFLARE_ACCOUNT_ID=YOUR_ACCOUNT_ID_HERE

# KV Namespace IDs (created with wrangler kv:namespace create)
# Production KV
KV_NAMESPACE_ID=REPLACE_WITH_PRODUCTION_KV_ID
KV_NAMESPACE_PREVIEW_ID=REPLACE_WITH_PREVIEW_KV_ID

# Staging KV
STAGING_KV_NAMESPACE_ID=REPLACE_WITH_STAGING_KV_ID

# Development KV
DEV_KV_NAMESPACE_ID=REPLACE_WITH_DEV_KV_ID

# Origin Server URLs (your actual Shopify app URLs)
PRODUCTION_ORIGIN_URL=https://your-production-app.run.app
STAGING_ORIGIN_URL=https://your-staging-app.run.app
DEVELOPMENT_ORIGIN_URL=http://localhost:3000

# Domain Configuration
DOMAIN_NAME=your-domain.com
API_SUBDOMAIN=api.your-domain.com
STAGING_SUBDOMAIN=staging-api.your-domain.com

# Worker Names (optional - defaults are fine)
WORKER_NAME=edge
PRODUCTION_WORKER_NAME=edge-prod
STAGING_WORKER_NAME=edge-staging
DEV_WORKER_NAME=edge-dev